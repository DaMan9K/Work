<Window x:Class="Work.Windows.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">

    <Grid Background="#FF303030">
        <StackPanel Margin="211,152,212,105">

            <TextBox Foreground="White" x:Name="Login" Text="" materialDesign:HintAssist.Hint="Введите логин" />
            <PasswordBox Foreground="White" x:Name="Password" materialDesign:HintAssist.Hint="Введите пароль" Margin="0 5"/>
           
            <Button x:Name="BTLogin" Content="Войти"
                BorderBrush="Black"
                VerticalAlignment="Top" Click="BTLogin_Click"
                Margin="0 5"
               />
            <Button x:Name="BTBack" Content="Закрыть"
                BorderBrush="Black"
                VerticalAlignment="Top" Click="BTBack_Click"
                Margin=" 0 5"
               />
        </StackPanel>
        <TextBlock Foreground="White" Text="Привет Вам!" FontSize="30" FontWeight="Bold" Margin="301,100,302,272"/>

    </Grid>
</Window>
